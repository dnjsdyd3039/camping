<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.camily.dao.ReplyDao">

<select id="getMaxRpcode" resultType="int">
		SELECT NVL(MAX(RPCODE),0)
		FROM REPLYS
</select>

<insert id="insertReplyWrite">
	   INSERT INTO REPLYS (RPCODE, RPMID, RPBOCODE, RPDATE, RPCONTENTS)
	   VAlUES (#{rpcode}, #{rpmid}, #{rpbocode}, SYSDATE, #{rpcontents} )

</insert>

<insert id="deleteReply">
	DELETE REPLYS WHERE RPCODE = #{delRno}
</insert>

</mapper>